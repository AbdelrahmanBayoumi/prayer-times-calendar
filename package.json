{
  "name": "prayer-times-calendar",
  "version": "1.0.0",
  "description": "A TypeScript-based tool to generate prayer times calendar in .ics format for a specified date range.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "husky",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev src/index.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "jest"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "prayer times",
    "ics",
    "calendar",
    "adhan",
    "islamic"
  ],
  "author": "Abdelrahman Bayoumi <abdelrahmanbayoumi1@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "adhan": "^4.4.3",
    "ical.js": "^2.1.0",
    "luxon": "^3.5.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.46"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^9.1.6",
    "jest": "^29.0.0",
    "lint-staged": "^15.2.10",
    "prettier": "^2.8.0",
    "ts-jest": "^29.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.0"
  }
}
