# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentation style for TypeScript, JSON, Markdown, and other code files
[*.{ts,js,json,md}]
indent_style = space
indent_size = 2

# YAML files (often use 2 spaces for indentation)
[*.yml]
indent_style = space
indent_size = 2

# Markdown files (keep trailing whitespace for line breaks)
[*.md]
trim_trailing_whitespace = false
